    <link href="../assets/css/main.css" rel="stylesheet">


</head>

<body>
   

    <section id="hero-animated" class=" align-items-center">
        <p>

            <a href="@Url.Action("Create", "Absences")">
                <button type="button" class="btn btn-primary">
                    <span class="btn-label">
                        <i class="fa fa-plus"></i>
                    </span>Noter Absence
                </button>
            </a>
        </p>
        <fieldset>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-outline-info">
                        <div class="card-body">
                            <table id="myTable" class="table table-striped">
                                    <tbody class="table-light">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DateAbsence)
                                            </th>
                                            <th>
                                                Séance absence
                                            </th>
                                            <th>
                                                Etudiant
                                            </th>
                                            <th>
                                                Classe
                                            </th>

                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th hidden> <input type="text" id="DeletingId" value="@item.id" hidden />  </th>
                                                <th>
                                                    @Html.DisplayFor(modelItem => Convert.ToDateTime(item.DateAbsence).Day) / @Html.DisplayFor(modelItem => Convert.ToDateTime(item.DateAbsence).Month) / @Html.DisplayFor(modelItem => Convert.ToDateTime(item.DateAbsence).Year)

                                                </th>
                                                <th>
                                                    @Html.DisplayFor(modelItem => item.seance.heure_debut)  -   @Html.DisplayFor(modelItem => item.seance.heure_fin)
                                                </th>
                                                <th>
                                                    @Html.DisplayFor(modelItem => item.Etudiant.nom)  &nbsp;  @Html.DisplayFor(modelItem => item.Etudiant.prenom)
                                                </th>
                                                <th>
                                                    @Html.DisplayFor(modelItems => item.Etudiant.Groupe.Filiere.name_filiere) @Html.DisplayFor(modelItems => item.Etudiant.Groupe.number_group)
                                                </th>
                                                <td style="cursor:pointer;background-color:red;">
                                                    <p style="text-align:center;font-size:12px;">Supprimer</p>
                                                </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>
                        </div>
                    </div>
                </div>
            </div>

        </fieldset>


    </section>


    <!-- Vendor JS Files -->
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>

</body>



