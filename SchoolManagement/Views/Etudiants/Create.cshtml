    <link href="../assets/css/variables.css" rel="stylesheet">

    <link href="../assets/css/main.css" rel="stylesheet">


</head>

<body>


    <section id="hero-animated" class=" align-items-center">
        <div style="display:flex">

            <a href="@Url.Action("Index", "Etudiants")">
                <button type="button" class="btn btn-primary">
                    <span class="btn-label">
                        <i class="bi bi-person-lines-fill" style="font-size:15px;" ></i> <i style="font-size:15px;" class="fa fa-plus">Consulter Liste Etudiants </i>
                    </span>
                </button>
            </a>&nbsp;
           
        </div>
        <br />



        <div class="row" >
            <div class="col-lg-12" >
                <div class="card card-outline-info">
                    <div class="card-body" >
                        <h1 style="text-align: left;">Ajout Etudiants</h1>

                    </div>
                    <div class="card-body" >

                        <form onsubmit="yourJsFunction();return false">

                            <div class="row mb-4">

                                <div class="col">
                                    <div class="form-outline">
                                        <input required type="text" id="Nom" class="form-control" />
                                        <label class="form-label" for="form3Example1">Nom</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="Prenom" class="form-control" />
                                        <label class="form-label" for="form3Example2">Prénom</label>
                                    </div>
                                </div>

                            </div>


                            <div class="row mb-4">

                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="CNE" class="form-control" />
                                        <label class="form-label" for="form3Example1">CNE</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">

                                        <select class="form-select form-select-lg mb-3" aria-label="Default select example" id="Classe">
                                            <option selected="selected">Choisissez La Classe </option>
                                            @*ViewBag.filier = db.Filiere.ToList();
                            ViewBag.Groupe = db.Groupe.ToList();*@

                                            @foreach (Filiere filiere in ViewBag.filier)
                                            {
                                                foreach (Groupe groupe in ViewBag.Groupe)
                                                {

                                                    if (groupe.id_filiere == filiere.id_filiere)
                                                    {
                                                        <option value="@groupe.id_groupe">   @filiere.name_filiere  @groupe.number_group    </option>
                                                    }
                                                }
                                            }






                                        </select>





                                        <label class="form-label" for="form3Example2">CLasse</label>
                                    </div>
                                </div>

                            </div>
                            <div class="row mb-4">

                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="Login" class="form-control" />
                                        <label class="form-label" for="form3Example1">Login</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="Password" class="form-control" />
                                        <label class="form-label" for="form3Example2">Password</label>
                                    </div>
                                </div>

                            </div>




                            <button style="font-size:20px;width:200px;" id="SubMitInsertion" class="btn btn-primary btn-block mb-4"><i class="bi bi-plus-lg"></i> Ajouter    </button>




                        </form>
                    </div>
                </div>
            </div>
        </div>



    </section>




</body>



</html>




