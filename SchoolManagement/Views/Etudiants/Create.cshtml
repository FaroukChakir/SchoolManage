        var selected_option = $('#Classe option:selected').val();
        var jsonData = {
            CNE: $("#CNE").val(),
            nom: $("#Nom").val(),
            prenom: $("#Prenom").val(),
            login: $("#Login").val(),
            password: $("#Password").val(),
            id_group: selected_option
        };

     

        $.ajax({
           url: "@Url.Action("Create","Etudiants")",
            type: "POST",
            data: jsonData,
            dataType: "json",

            success: function (data) {
             
