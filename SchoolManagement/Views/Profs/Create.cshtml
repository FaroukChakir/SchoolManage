@model IEnumerable<SchoolManagement.Prof>

@{
    ViewBag.Title = "Index";
}





<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <meta content="" name="description">
    <meta content="" name="keywords">

    <link href="../assets/img/favicon.png" rel="icon">
    <link href="../assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Source+Sans+Pro:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">


    <link href="../assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="../assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="../assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="../assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link href="../assets/css/variables.css" rel="stylesheet">

    <link href="../assets/css/main.css" rel="stylesheet">


</head>

<body>


    <section id="hero-animated" class=" align-items-center">
        <div style="display:flex">

            <a href="@Url.Action("Index", "Profs")">
                <button type="button" class="btn btn-primary">
                    <span class="btn-label">
                        <i class="bi bi-person-lines-fill" style="font-size:15px;"></i> <i style="font-size:15px;" class="fa fa-plus">Consulter Liste Professeurs </i>
                    </span>
                </button>
            </a>&nbsp;

        </div>
        <br />



        <div class="row">
            <div class="col-lg-12">
                <div class="card card-outline-info">
                    <div class="card-body">
                        <h1 style="text-align: left;">Ajout Prof</h1>

                    </div>
                    <div class="card-body">

                        <form>
                            <div class="row mb-4">

                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="CNE" class="form-control" />
                                        <label class="form-label" for="form3Example1">CNE</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="Name" class="form-control" />
                                        <label class="form-label" for="form3Example2">Name</label>
                                    </div>
                                </div>
                            
       

                            </div>
                            <div class="row mb-4">

                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="Email" class="form-control" />
                                        <label class="form-label" for="form3Example1">Email</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input  type="text" id="Adresse" class="form-control" />
                                        <label class="form-label" for="form3Example2">Adresse</label>
                                    </div>
                                </div>

                            </div>

                            <div class="row mb-4">

                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="Tel" class="form-control" />
                                        <label class="form-label" for="form3Example1">Tel</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">

                                        <select class="form-select form-select-lg mb-3" aria-label="Default select example" id="Classe">
                                            <option selected="selected">Choisissez La Matiere </option>
                                            @*ViewBag.filier = db.Filiere.ToList();
        ViewBag.Groupe = db.Groupe.ToList();*@

                                            @foreach (matiere matiere in ViewBag.matiere)
                                            {
                                                <option value="@matiere.id">@matiere.nom </option>
                                            }






                                        </select>





                                        <label class="form-label" for="form3Example2">CLasse</label>
                                    </div>
                                </div>

                            </div>
                            <div class="row mb-4">

                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="Login" class="form-control" />
                                        <label class="form-label" for="form3Example1">Login</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="Password" class="form-control" />
                                        <label class="form-label" for="form3Example2">Password</label>
                                    </div>
                                </div>

                            </div>




                            <button style="font-size:20px;width:200px;" id="SubMitInsertion" class="btn btn-primary btn-block mb-4"> Ajouter Etudiant   </button>



                        </form>
                    </div>
                </div>
            </div>
        </div>



    </section>




</body>



</html>




@Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript" src="/scripts/jquery.min.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="assets/vendor/aos/aos.js"></script>
<script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
<script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
<script src="assets/vendor/php-email-form/validate.js"></script>

<script src="assets/js/main.js"></script>

<script>




 



    $("#SubMitInsertion").click(function () {
        //var idDeleting = $(this).closest('tr').find('input[id=DeletingId]').val();
        var selected_option = $('#Classe option:selected').val();
        var jsonData = {


            

            CNE: $("#CNE").val(),
            name: $("#Name").val(),
            email: $("#Email").val(),
            adresse: $("#Adresse").val(),
            Tel: $("#Tel").val(),
            login: $("#Login").val(),
            password: $("#Password").val(),
            id_matiere: selected_option
        };

   

        $.ajax({
           url: "@Url.Action("Create","Profs")",
            type: "POST",
            data: jsonData,
            dataType: "json",

            success: function (data) {

            }
        });
    });



</script>